FLASK_APP=app.py
FLASK_ENV=production
# Database configuration - set these to your PythonAnywhere DB values or external DB
DB_HOST=127.0.0.1
DB_USER=<PA_DB_USER>
DB_PASSWORD=<PA_DB_PASSWORD>
DB_NAME=<PA_DB_NAME>

# Replace with a strong secret key for session signing
SECRET_KEY=REPLACE_WITH_STRONG_SECRET

# Optional: change other environment variables used by your app here

# Note: Do NOT commit your real `.env` file. Copy this file to `.env` and
# replace placeholders before running the app locally or on the server.
# ============================================================================
# Environment Variables for Chaa Choo Café - Production Deployment
# ============================================================================
# Copy this file to .env and fill in your production values
# NEVER commit the actual .env to version control

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=localhost
DB_USER=chaa_choo_user
DB_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
DB_NAME=chaa_choo_db

# ============================================================================
# FLASK CONFIGURATION
# ============================================================================
# IMPORTANT: Generate a new secret key for production
# $ python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=YOUR_GENERATED_SECRET_KEY_HERE

# Flask environment: production or development
FLASK_ENV=production
DEBUG=False

# ============================================================================
# LOGGING
# ============================================================================
LOG_FILE=/var/log/chaa-choo/app.log

# ============================================================================
# GUNICORN CONFIGURATION (for VPS deployment)
# ============================================================================
WORKERS=4
WORKER_CLASS=sync
WORKER_TIMEOUT=60
GUNICORN_USER=www-data
GUNICORN_GROUP=www-data

# ============================================================================
# SHOP CONFIGURATION (optional)
# ============================================================================
SHOP_NAME=Chaa Choo Café
SHOP_ADDRESS=Your Address, City, Country
SHOP_HOURS=08:00 - 22:00
